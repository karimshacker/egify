# Database
DATABASE_URL="postgresql://username:password@localhost:5432/egify_db"

# Server
PORT=4000
NODE_ENV=development

# JWT
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=30d

# Session
SESSION_SECRET=your-session-secret-key

# Redis
REDIS_URL=redis://localhost:6379

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@egify.com

# File Upload
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=egify-uploads

# Payment
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_WEBHOOK_SECRET=your-paypal-webhook-secret

# Webhooks
SHIPPING_WEBHOOK_SECRET=your-shipping-webhook-secret
EMAIL_WEBHOOK_SECRET=your-email-webhook-secret
SMS_WEBHOOK_SECRET=your-sms-webhook-secret
ANALYTICS_WEBHOOK_SECRET=your-analytics-webhook-secret
CUSTOM_WEBHOOK_SECRET=your-custom-webhook-secret

# URLs
API_URL=http://localhost:4000
FRONTEND_URL=http://localhost:3000
STOREFRONT_URL=http://localhost:3001

# Search
ELASTICSEARCH_URL=http://localhost:9200

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log 